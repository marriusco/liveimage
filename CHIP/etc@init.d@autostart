PROCESS=/home/chip/autostart
PROCESSROOT=/home/chip/autostart-root

stop() {
    kill $(pidof autostart)
    kill $(pidof autostart-root)
    sleep 1
}

start() {
     ${PROCESSROOT} &
     su -c ${PROCESS} -s /bin/bash chip &
}


case "$1" in
start)
    start
    ;;
stop)
    stop
    ;;
retart)
    stop
    start
    ;;
*)
    echo "Usage: $0 {start|stop|restart}"
esac




